@model TravelTripProje.Models.Siniflar.BlogYorum

<div class="content-form">
    <h3>Bir Yorum Yapın</h3>
<form method="post">
    
    <input type="hidden" placeholder="ID" required name="Blogid"value="@ViewBag.deger" disabled />

    <input type="text" placeholder="Kullanıcı Adı" required name="KullaniciAdi" />
    <input type="text" placeholder="Mail Adresi" required name="Mail" />
    <textarea placeholder="Yorum" name="Yorum"></textarea>
    <input type="submit" value="Gönder" />
</form>
</div>